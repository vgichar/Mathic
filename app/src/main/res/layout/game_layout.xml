<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass)" >

    <ProgressBar
        android:id="@+id/pb_timer"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:indeterminateOnly="false"
        android:max="1000"
        android:progressDrawable="@drawable/progress_bar" />

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_level"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="invisible"/>

        <ImageButton
            android:onClick="info"
            android:id="@+id/info_button"
            android:background="@drawable/info_black"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_equation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ellipsize="middle"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#ffffff"
        android:textSize="68sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_margin="0dp"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:contentDescription="@string/no"
            android:onClick="no_click"
            android:scaleType="fitCenter"
            android:src="@drawable/no" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:contentDescription="@string/yes"
            android:onClick="yes_click"
            android:scaleType="fitCenter"
            android:src="@drawable/yes" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:contentDescription="@string/no"
            android:onClick="no_click"
            android:scaleType="fitCenter"
            android:src="@drawable/no" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:contentDescription="@string/yes"
            android:onClick="yes_click"
            android:scaleType="fitCenter"
            android:src="@drawable/yes" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="5dp"
            android:text="@string/header"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="5dp"
            android:text="@string/verison"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>